<?xml version='1.0' encoding='utf-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	
	<import resource="bean-hibernate.cfg.xml"/>
		
	<bean id="sessionFactory" 
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="databaseSource"/>
		<property name="hibernateProperties" ref="hibernateProperties" />
		<property name="mappingResources">
			<list>
				<value>com/cuprum/server/common/entities/User.hbm.xml</value>
				<value>com/cuprum/server/common/entities/UserSession.hbm.xml</value>
			</list>
		</property>		
	</bean>
	
	<bean id="com.cuprum.server.common.model.user.IUserLoginModel" class="com.cuprum.server.common.model.user.UserLoginModel">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="com.cuprum.server.common.model.user.IUserPasswordModel" class="com.cuprum.server.common.model.user.UserPasswordModel">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="com.cuprum.server.common.model.user.IUserMailModel" class="com.cuprum.server.common.model.user.UserMailModel">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="com.cuprum.server.common.model.user.IUserRegisterModel" class="com.cuprum.server.common.model.user.UserRegisterModel">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="com.cuprum.server.common.model.usersession.IUserSessionModel" class="com.cuprum.server.common.model.usersession.UserSessionModel">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="com.cuprum.server.common.model.property.IPropertyModel" class="com.cuprum.server.common.model.property.PropertyModel">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="com.cuprum.server.common.utils.EntityTestDAO" class="com.cuprum.server.common.utils.EntityTestDAO">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
</beans>
