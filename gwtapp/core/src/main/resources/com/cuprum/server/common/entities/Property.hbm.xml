<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- Good tutrial: http://www.makemyinfo.com/Tutorial.do?action=getTutorial&tutId=T0005.jsp -->
<hibernate-mapping>
    <class name="com.cuprum.server.common.entities.Property" table="properties">
    	<cache usage="read-only"/>
        <id name="id" column="propertyId">
            <generator class="native"/>
        </id>
        <property name="property" unique="true" not-null="true"/>
        <property name="value" />
    </class>
</hibernate-mapping>