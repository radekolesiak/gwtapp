<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.cuprum.server.common.entities.UserPasswordRemind" table="userpasswordremind">
        <id name="id" column="confirmId">
            <generator class="native"/>
        </id>
        <property name="uid" unique="true" not-null="true"/>
        <property name="date"/>
		<many-to-one 
			name="user"
			class="com.cuprum.server.common.entities.User"
			column="userId"
		/>
    </class>
</hibernate-mapping>